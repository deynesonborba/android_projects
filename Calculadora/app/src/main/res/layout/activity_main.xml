<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <TextView
        android:id="@+id/txtTela"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_x="40dp"
        android:layout_y="20dp"
        android:textSize="40dp"
        android:textAlignment="viewEnd"
        android:hint="0"
        android:background="#dddddd" />

    <Button
        android:text="C"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="35dp"
        android:layout_y="90dp"
        android:id="@+id/btnLimpar"
        android:onClick="limparTela"/>

    <Button
        android:text="/"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="115dp"
        android:layout_y="90dp"
        android:id="@+id/btnDivisao"
        android:onClick="setarOperador" android:tag="/"/>

    <Button
        android:text="x"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="195dp"
        android:layout_y="90dp"
        android:id="@+id/btnMultiplicacao"
        android:onClick="setarOperador" android:tag="x"/>

    <Button
        android:text="-"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="275dp"
        android:layout_y="90dp"
        android:id="@+id/btnSubtracao"
        android:onClick="setarOperador" android:tag="-"/>

    <Button
        android:text="7"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="35dp"
        android:layout_y="160dp"
        android:id="@+id/btn7"
        android:onClick="preencherTela" android:tag="7"/>

    <Button
        android:text="8"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="115dp"
        android:layout_y="160dp"
        android:id="@+id/btn8"
        android:onClick="preencherTela" android:tag="8" />

    <Button
        android:text="9"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="195dp"
        android:layout_y="160dp"
        android:id="@+id/btn9"
        android:onClick="preencherTela" android:tag="9"/>

    <Button
        android:text="+"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="120dp"
        android:layout_x="275dp"
        android:layout_y="160dp"
        android:id="@+id/btnSoma"
        android:onClick="setarOperador" android:tag="+"/>

    <Button
        android:text="4"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="35dp"
        android:layout_y="230dp"
        android:id="@+id/btn4"
        android:onClick="preencherTela" android:tag="4"/>

    <Button
        android:text="5"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="115dp"
        android:layout_y="230dp"
        android:id="@+id/btn5"
        android:onClick="preencherTela" android:tag="5"/>

    <Button
        android:text="6"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="195dp"
        android:layout_y="230dp"
        android:id="@+id/btn6"
        android:onClick="preencherTela" android:tag="6"/>

    <Button
        android:text="1"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="35dp"
        android:layout_y="300dp"
        android:id="@+id/btn1"
        android:onClick="preencherTela" android:tag="1"/>

    <Button
        android:text="2"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="115dp"
        android:layout_y="300dp"
        android:id="@+id/btn2"
        android:onClick="preencherTela" android:tag="2"/>

    <Button
        android:text="3"
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="195dp"
        android:layout_y="300dp"
        android:id="@+id/btn3"
        android:onClick="preencherTela" android:tag="3"/>

    <Button
        android:text="="
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="120dp"
        android:layout_x="275dp"
        android:layout_y="300dp"
        android:id="@+id/btnIgual"
        android:onClick="btnIgualClick"/>

    <Button
        android:text="0"
        android:textSize="25sp"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_x="35dp"
        android:layout_y="370dp"
        android:id="@+id/btn0"
        android:onClick="preencherTela" android:tag="0"/>

    <Button
        android:text="."
        android:textSize="25sp"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_x="195dp"
        android:layout_y="370dp"
        android:id="@+id/btnPonto"
        android:onClick="preencherTela" android:tag="."/>
</AbsoluteLayout>